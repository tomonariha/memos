<% id = params[:id] %>
<form method='post' action='/memos/<%= id.to_i %>'>
  <input type='text' name='title' size='30' value=<%= CGI.escapeHTML(@memos[id]['title']) %> ><br>
  <textarea type='text' name='body' cols='30' rows='10'><%= CGI.escapeHTML(@memos[id]['body']) %></textarea><br>
  <input type='hidden' name='_method' value='patch'>
  <input type='submit' value='変更'>
</form>
